  </div>

  <div class="mobilenavs" id="mobilenavcontainer">
    <div class="mobile-close" id="mobile-close">
      <img width="20" src="https://cdn.shopify.com/s/files/1/0548/6644/4336/files/close_mobile.svg?v=1636972586">
    </div>
    <div class="mobile-nav-container">
      <ul class="main_list_nav">
        <li class="main_list_parent"><a href="javascript:void(0);" id="mobile-nav-search">SEARCH</a></li>
        {% for link in linklists[getMenu].links %}
          {% assign getLinkTitle = link.title | handleize %}
          <li class="main_list_parent">
            {% if link.links.size > 0 %}
              <a
                class="{% if link.links.size > 0 %}haschild{% endif %}"
                href="javascript:void(0);"
                {% for purple in specialnavitem %}
                  {%- assign purplrit = purple | handleize -%}
                  {%- if getLinkTitle == purplrit -%}
                    style="color:{{section.settings.navigatioitemcolormobile}};"
                  {%- endif -%}
                {% endfor %}
              >
                {{- link.title }}
                <img
                  class="child-plus-minus"
                  src="https://cdn.shopify.com/s/files/1/0548/6644/4336/files/plus_minus.svg?v=1636976618"
              ></a>
              <ul class="parent_list_nav">
                {% for child_link in link.links %}
                  <li class="child_list_nav">
                    {% if child_link.links.size == 0 %}
                      {% assign getLinkTitle = child_link.links.title | handleize %}
                      <a
                        class="nograndchild"
                        href="{{ child_link.url }}"
                        {% for purple in specialnavitem %}
                          {%- assign purplrit = purple | handleize -%}
                          {%- if getLinkTitle == purplrit -%}
                            style="color:{{section.settings.navigatioitemcolormobile}};"
                          {%- endif -%}
                        {% endfor %}
                      >
                        {{- child_link.title -}}
                      </a>
                    {% else %}
                      {% if child_link.links.size > 0 %}
                        {% assign getLinkTitle = child_link.links.title | handleize %}
                        <a
                          class="{% if child_link.links.size > 0 %}hasgrandchild{% endif %}"
                          href="javascript:void(0);"
                          {% for purple in specialnavitem %}
                            {%- assign purplrit = purple | handleize -%}
                            {%- if getLinkTitle == purplrit -%}
                              style="color:{{section.settings.navigatioitemcolormobile}};"
                            {%- endif -%}
                          {% endfor %}
                        >
                          {{- child_link.title }}
