{{ 'component-static-header.css' | asset_url | stylesheet_tag }}

{%- assign headerLayout = section.settings['header-layout'] -%}
<script
  type="application/json"
  data-section-type="static-header"
  data-section-id="{{ section.id }}"
  data-section-data
></script>

<header
  class="
    header-desktop tko-navigation
    {% if headerLayout == 'minimal-sticky' %}
    main-header--{{ headerLayout }}
    {% assign headerLayout = 'minimal' %}
    {% endif %}
  "
>
  {% assign popularsearch = settings.popularsearch | split: ',' %}
  {% assign specialnavitem = section.settings.specialColor | split: ',' %}

  <section
    class="main-header"
    id="masterheader"
    style="top: 30px"
    data-timer-visible="{{ settings.show_countdown_timer }}"
    data-popular="{% for popular in popularsearch %}{{popular}}{%if forloop.last != true %},{%endif%}{% endfor %}"
  >
    <div class="tko-header-container tko-flex-row">
      <div class="tko-side tko-left">
        <ul class="parent">
          {% assign getMenu = section.settings.menu %}
          {% for link in linklists[getMenu].links limit: 3 %}
            <li class="subi">
              {% assign getLinkTitle = link.title | handleize %}

              <a
                href="{{link.url}}"
                {% for purple in specialnavitem %}
                  {%- assign purplrit = purple | handleize -%}
                  {%- if getLinkTitle == purplrit %}style="color:{{section.settings.navigatioitemcolor}};"{% endif -%}
                {% endfor %}
              >
                {{- link.title -}}
              </a>
              {% assign linkGet = link.title %}

              {% if link.links.size > 0 %}
                {% for block in section.blocks %}
                  {% if link.title == block.settings.titleofmenu %}
                    {% assign getNumberLayout = block.settings.headerlayoutsx %}
                    {% if block.settings['megamenu-layouts'] == 'image-submenu' %}
                      <div class="mega-menu">
                        <div class="mm-main mm-main-height">
                          {% for child_link in link.links %}
                            {% if child_link.links.size == 0 %}
                              <div class="alignmentdiv">
                                <div class="mm-layout mn-layout">
                                  <div class="mm-sub">
                                    {% assign getLinkTitle = child_link.title | handleize %}

                                    <a
                                      class="mm-a"
                                      {% for purple in specialnavitem %}
                                        {% assign purplrit = purple | handleize -%}
                                        {%- if getLinkTitle == purplrit -%}
                                          style="color:{{section.settings.navigatioitemcolor}};"
                                        {%- endif -%}
                                      {% endfor %}
                                      href="{{ child_link.url}}"
                                    >
                                      {{- child_link.title -}}
                                    </a>
                                  </div>
                                </div>
                              </div>
                            {% else %}
                              <div class="mm-layout">
                                <h2 class="mm-title">{{ child_link.title }}</h2>
                                <div class="mm-sub">
                                  {% if child_link.links.size > 0 %}
                                    {% for grandchild_link in child_link.links %}
                                      {% assign getLinkTitle = grandchild_link.title | handleize %}

                                      <a
                                        class="mm-a"
                                        {% for purple in specialnavitem %}
                                          {%- assign purplrit = purple | handleize -%}
                                          {%- if getLinkTitle == purplrit -%}
                                            style="color:{{section.settings.navigatioitemcolor}};"
                                          {%- endif -%}
                                        {% endfor %}
                                        href="{{ grandchild_link.url}}"
                                      >
                                        {{- grandchild_link.title -}}
                                      </a>
                                    {% endfor %}
                                  {% endif %}
                                </div>
                              </div>
                            {% endif %}
                          {% endfor %}
                        </div>
                        <div class="mm-main">
                          <div class="mm-layout mm-featured">
                            <h2 class="mm-title">{{ block.settings.titleofimages }}</h2>
                            <div
                              class="mm-fe-container"
                              {% if getNumberLayout == '1' %}
                                style="grid-template-columns: repeat(1, 1fr);"
                              {% endif %}
                              {% if getNumberLayout == '2' %}
                                style="grid-template-columns: repeat(2, 1fr);"
                              {% endif %}
                              {% if getNumberLayout == '3' %}
                                style="grid-template-columns: repeat(3, 1fr);"
                              {% endif %}
                            >
                              <div class="mm-fe-item">
                                {% if getNumberLayout == '1' %}
                                  <div
                                    class="mega-menu-img-container"
                                    {% if getNumberLayout == '2' or getNumberLayout == '1' %}
                                      style="max-height:365px"
                                    {% endif %}
                                  >
                                    <a href="{{block.settings.image_one_url}}">
                                      <img
                                        src="{{ block.settings.image_one | img_url: 'x500' }}"
                                        alt="{{ block.settings.image_one.alt}}"
                                    ></a>
                                  </div>
                                {% else %}
                                  <div
                                    class="mega-menu-img-container"
                                    {% if getNumberLayout == '2' or getNumberLayout == '1' %}
                                      style="max-height:365px"
                                    {% endif %}
                                  >
                                    <a href="{{block.settings.image_one_url}}">
                                      <img
                                        src="{{ block.settings.image_one | img_url: '597x' }}"
                                        alt="{{ block.settings.image_one.alt}}"
                                    ></a>
                                  </div>
                                {% endif %}
                                {% if block.settings.urlenabled == true %}
                                  <h3>
                                    <a class="btn-darrow" href="{{block.settings.image_one_url}}">
                                      {{- block.settings.image_one_text -}}
                                    </a>
                                  </h3>
                                {% endif %}
                              </div>
                              {% if getNumberLayout == '2' or getNumberLayout == '3' %}
                                <div class="mm-fe-item">
                                  <div
                                    class="mega-menu-img-container"
                                    {% if getNumberLayout == '2' %}
                                      style="max-height:365px"
                                    {% endif %}
                                  >
                                    <a href="{{block.settings.image_two_url}}">
                                      <img
                                        src="{{ block.settings.image_two | img_url: '597x' }}"
                                        alt="{{ block.settings.image_two.alt}}"
                                    ></a>
                                  </div>
                                  {% if block.settings.urlenabled == true %}
                                    <h3>
                                      <a class="btn-darrow" href="{{block.settings.image_two_url}}">
                                        {{- block.settings.image_two_text -}}
                                      </a>
                                    </h3>
                                  {% endif %}
                                </div>
                              {% endif %}
                              {% if getNumberLayout == '3' %}
                                <div class="mm-fe-item">
                                  <div class="mega-menu-img-container">
                                    <a href="{{block.settings.image_three_url}}">
                                      <img
                                        src="{{ block.settings.image_three | img_url: '597x' }}"
                                        alt="{{ block.settings.image_three.alt}}"
                                    ></a>
                                  </div>
                                  {% if block.settings.urlenabled == true %}
                                    <h3>
                                      <a class="btn-darrow" href="{{block.settings.image_three_url}}">
                                        {{- block.settings.image_three_text -}}
                                      </a>
                                    </h3>
                                  {% endif %}
                                </div>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      </div>
                    {% else %}
                      {%- comment -%}
                        ------------------------------------------------
                        Mega Menu Full Image
                        ------------------------------------------------
                      {%- endcomment -%}
                      <div class="mega-menu">
                        <div class="full-image-container">
                          <div class="full-image-items">
                            {% if block.settings.image_one != null or block.settings.image_one != blank %}
                              <div class="full-image-item">
                                <div class="full-image">
                                  <a href="{{block.settings.image_one_url}}">
                                    <img src="{{block.settings.image_one | img_url : '944x1182'}}"
                                  ></a>
                                </div>
                                <a href="{{block.settings.image_one_url}}">{{ block.settings.image_one_text }}</a>
                              </div>
                            {% endif %}
                            {% if block.settings.image_two != null or block.settings.image_two != blank %}
                              <div class="full-image-item">
                                <div class="full-image">
                                  <a href="{{block.settings.image_two_url}}">
                                    <img src="{{block.settings.image_two | img_url : '944x1182'}}"
                                  ></a>
                                </div>
                                <a href="{{block.settings.image_two_url}}">{{ block.settings.image_two_text }}</a>
                              </div>
                            {% endif %}
                            {% if block.settings.image_three != null or block.settings.image_three != blank %}
                              <div class="full-image-item">
                                <div class="full-image">
                                  <a href="{{block.settings.image_three_url}}">
                                    <img src="{{block.settings.image_three | img_url : '944x1182'}}"
                                  ></a>
                                </div>
                                <a href="{{block.settings.image_three_url}}">{{ block.settings.image_three_text }}</a>
                              </div>
                            {% endif %}
                            {% if block.settings.image_four != null or block.settings.image_four != blank %}
                              <div class="full-image-item">
                                <div class="full-image">
                                  <a href="{{block.settings.image_four_url}}">
                                    <img src="{{block.settings.image_four | img_url : '944x1182'}}"
                                  ></a>
                                </div>
                                <a href="{{block.settings.image_four_url}}">{{ block.settings.image_four_text }}</a>
                              </div>
                            {% endif %}
                          </div>
                        </div>
                      </div>

                      {%- comment -%}
                        ------------------------------------------------
                        Mega Menu Full Image
                        ------------------------------------------------
                      {%- endcomment -%}
                    {% endif %}
                  {% endif %}
                {% endfor %}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>

