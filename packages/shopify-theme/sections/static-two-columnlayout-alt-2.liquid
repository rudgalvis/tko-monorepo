{{ 'component-static-two-column-alt-2.css' | asset_url | stylesheet_tag }}

<section class="kto-main-container {% if section.settings.sectionID != nil %} targetID {% endif %}" {% if section.settings.sectionID != nil %}id="{{ section.settings.sectionID }}" {% endif %}>
    <div class="tko-lines tko-two-column-{{section.id}}"
    {% if section.settings.borderlayouttwocl == 'top-bottom'%} 
    style="
      border-top-style:  solid;
      border-top-color:   black;
      border-bottom-style: solid;
      border-bottom-color:  black;
       
    ">
    {% elsif  section.settings.borderlayouttwocl == 'only-top' %}
    style="
    border-top-style:  solid;
    border-top-color:   black;
    border-bottom: none;
      
    ">
    {% elsif  section.settings.borderlayouttwocl == 'only-bottom' %}
    style="
    border-top: none;
    border-bottom-style:  solid;
    border-bottom-color:   black;
      
    ">
    
    {% else %}
    
    style="
    border-top: none;
    border-bottom: none;
  
      
    "> 
  
    {% endif %}

    <div class="two-column-container-- {{section.settings.sectionlayouttwocl}}">
        {% assign selectedLayer = section.settings.sectionlayouttwocl %}
        <div class="two-column-- cl-left--">
            {%
                render 'rimg'
                img: section.settings.cl-image,
                alt: section.settings.cl-image.alt,
                size: '938x',
              %}
        </div>
        <div class="two-column-- cl-right-- cl-uppercase padding-{{section.id}}" {% if selectedLayer == 'text-image'%} style="order:1; justify-content:{{ section.settings.textposition }};" {% else %} style="order:2; justify-content:{{ section.settings.textposition }};" {% endif %}>
          {% if section.settings.showtitletwo == true %}
            <h2 class="two-col-h2-{{section.id}}">{{ section.settings.headingcl }}</h2>
          {% endif %}  
            <div class="cl-content--">
                <p class="two-col-p-{{section.id}}">{{ section.settings.bodycl }}</p>
                {% if section.settings.showurlcl == true %}
                <a href="{{ section.settings.linkclUrl }}" class="btn-darrow inside-section">{{section.settings.linkTextcl}}</a>
                {% endif %}
            </div>
        </div>
    </div>

    </div>
    </section>



