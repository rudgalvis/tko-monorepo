<style>
 .tko-two-column-{{section.id}}{
        padding: {{section.settings.padding_sizeup}}px 0px {{section.settings.padding_sizedown}}px 0px;
        border-width:1px;
  }

  .two-col-h2-{{section.id}}{
        max-width:{{section.settings.h2maxwidthdesktop}}px; 
  }

  .two-col-p-{{section.id}}{
        max-width:{{section.settings.pmaxwidthdesktop}}px; 
  }


  @media (max-width: 812px) {
    .tko-two-column-{{section.id}}{
        padding: {{section.settings.padding_sizeupm}}px 0px {{section.settings.padding_sizedownm}}px 0px;
        border-width:0.5px;
  }
  .two-col-h2-{{section.id}}{
        max-width:{{section.settings.h2maxwidthmobile}}px; 
  }

  .two-col-p-{{section.id}}{
        max-width:{{section.settings.pmaxwidthmobile}}px; 
  }
