<section class="kto-main-container line_bre" {% if section.settings.sectionID != nil %}id="{{ section.settings.sectionID }}" {% endif %}>
  {% assign empt_statecontrol =  section.settings.twocolheading %}
   {% if empt_statecontrol != "" %}
    <div class="tko-lines static-two-text-{{section.id}}"
    {% if section.settings.borderlayouttwocltext == 'top-bottom'%}
    style="
    border-top-style:  solid;
      border-top-color:   black;
      border-bottom-style: solid;
      border-bottom-color:  black;
        
    ">
    {% elsif  section.settings.borderlayouttwocltext == 'only-top' %}
    style="
    border-top-style:  solid;
    border-top-color:   black;
    border-bottom: none;
        
    ">
    {% elsif  section.settings.borderlayouttwocltext == 'only-bottom' %}
    style="
    border-top: none;
    border-bottom-style:  solid;
    border-bottom-color:   black;
     
    ">
    
    {% else %}
    
    style="
    border-top: none;
    border-bottom: none;
     
    "> 
  
    {% endif %}

    {{ 'component-two-column-text.css' | asset_url | stylesheet_tag }}




<div class="twocoltext-container tct-section-{{section.id}}">
    <div class="twocoltext-content">
        <div class="tct tct-left">
            <h2 class="tct-h2-{{section.id}}">{{ section.settings.twocolheading }}</h2>
        </div>
        <div class="tct tct-right tct-p-{{section.id}}">
            {{ section.settings.twocolcopy }}
        </div>
    </div>
</div>

</div>
{% else %}
 <div class="line_holder"></div>
 <style>
    .line_holder {
        width: 100%;
        height: 5px;
        border-bottom:1px solid black;
    }
   .line_bre{
     width:100%;
     height: auto;
     padding:0px 25px;
   }
   @media (max-width: 812px) {
    .line_holder {
        border-bottom:.5px solid black;
    }
   }
 </style>
{% endif %}
</section>





{% schema %}
  
{
    "name": "2 Column Layout Text", 
    "settings": [
    {
      "type": "header",
      "content": "Line Layout Options"
    },
      {
        "type": "select",
        "id": "borderlayouttwocltext",
        "label": "Section Border Options",
        "default": "top-bottom",
        "options": [
          {
            "value": "top-bottom",
            "label": "Show Border Top & Bottom"
          },
          {
            "value": "only-top",
            "label": "Show Border Only Top"
          },
          {
              "value": "only-bottom",
              "label": "Show Border Only Bottom"
            },
          {
              "value": "hide-border",
              "label": "Hide Borders"
            }
        ]
      },
      {
        "type": "header",
        "content": "Line Padding Options Desktop"
      },
      {
        "type":"number",
        "id":"padding_sizeup",
        "label":"Top",
        "default":15
      },
      {
        "type":"number",
        "id":"padding_sizedown",
        "label":"Bottom",
        "default":15
      },
      {
        "type": "header",
        "content": "Line Padding Options Mobile"
      },
      {
        "type":"number",
        "id":"padding_sizeupm",
        "label":"Top",
        "default":15
      },
      {
        "type":"number",
        "id":"padding_sizedownm",
        "label":"Bottom",
        "default":15
      },
      {
        "type": "header",
        "content": "Section Padding Options Desktop"
      },
      {
        "type":"number",
        "id":"padding_top_sec",
        "label":"Top",
        "default":15
      },
      {
        "type":"number",
        "id":"padding_bottom_sec",
        "label":"Bottom",
        "default":15
      },
      {
        "type": "header",
        "content": "Section Padding Options Mobile"
      },
      {
        "type":"number",
        "id":"padding_top_secm",
        "label":"Top",
        "default":15
      },
      {
        "type":"number",
        "id":"padding_bottom_secm",
        "label":"Bottom",
        "default":15
      },
      {
        "type": "header",
        "content": "Title Options"
      },
     
      {
        "id": "twocolheading",
        "type": "text",
        "label": "Title"
      },
      {
        "type": "header",
        "content": "Title Max. Width"
      },
      {
        "type":"number",
        "id":"hed_padding_sec",
        "label":"Desktop",
        "default":15
      },
      {
        "type":"number",
        "id":"hed_padding_secm",
        "label":"Mobile",
        "default":15
      },
      {
        "type": "header",
        "content": "Body Options"
      },
      {
        "id": "twocolcopy",
        "type": "richtext",
        "label": "Body Copy"
      },
      {
        "type": "header",
        "content": "Copy Max. Width"
      },
      {
        "type":"number",
        "id":"cop_padding_sec",
        "label":"Desktop",
        "default":15
      },
      {
        "type":"number",
        "id":"cop_padding_secm",
        "label":"Mobile",
        "default":15
      },
      {
        "type": "header",
        "content": "Anchor Point Options"
      },
      {
        "id": "sectionID",
        "type": "text",
        "label": "Anchor Point"
      }
      ],
    "presets": [ 
{
"category": "2 Column Layout Text",
"name": "2 Column Layout Text"
}
]
  }
{% endschema %}


<style>
  .static-two-text-{{section.id}}{
        padding: {{section.settings.padding_sizeup}}px 0px {{section.settings.padding_sizedown}}px 0px;
        border-width:1px;
  }

  .tct-section-{{section.id}}{
        padding: {{section.settings.padding_top_sec}}px 0px {{section.settings.padding_bottom_sec}}px 0px;
      
  }

  .tct-h2-{{section.id}}{
    max-width:{{section.settings.hed_padding_sec}}px;
  }

  .tct-p-{{section.id}} p{
    max-width:{{section.settings.cop_padding_sec}}px;
  }

 

  @media (max-width: 812px) {


  } 

  @media (min-width: 320px) and (max-width: 480px) {

    .static-two-text-{{section.id}}{
        padding: {{section.settings.padding_sizeupm}}px 0px {{section.settings.padding_sizedownm}}px 0px;
        border-width:0.5px;
       
  }

  .tct-section-{{section.id}}{
        padding: {{section.settings.padding_top_secm}}px 0px {{section.settings.padding_bottom_secm}}px 0px;
        
  }
  .tct-h2-{{section.id}}{
    max-width:{{section.settings.hed_padding_secm}}px;
  }
  .tct-p-{{section.id}} p{
    max-width:{{section.settings.cop_padding_secm}}px;
    margin-right: auto;
    margin-left: inherit;
    padding-left:0px;
  }
  }
</style>