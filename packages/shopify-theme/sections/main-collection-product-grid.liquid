                                                ------------------
                                                variant -hide -show depends on quantity
                                                ------------------
                                                {%- endcomment -%}
                                                {% assign colorCount_selected = product.variants[0].option1 | handleize %}
                                                {% assign colorCount_selected_push = product.variants[0].option1 %}
                                                {% assign colorCount_selected_quantity = 0 %}
                                                {% assign isContinue = 0 %}

