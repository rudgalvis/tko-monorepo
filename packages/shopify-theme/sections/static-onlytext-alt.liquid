{{ 'component-static-onlytext-alt.css' | asset_url | stylesheet_tag }}

<section class="kto-main-container" {% if section.settings.sectionID != nil %}id="{{ section.settings.sectionID }}" {% endif %}>
  <div class="tko-lines sot-alt-{{section.id}}"
  {% if section.settings.onlyTextlayout_ == 'top-bottom'%}
  style="
      border-top-style:  solid;
      border-top-color:   black;
      border-bottom-style: solid;
      border-bottom-color:  black;
     
      
  ">
  {% elsif  section.settings.onlyTextlayout_ == 'only-top' %}
  style="
  border-top-style:  solid;
  border-top-color:   black;
  border-bottom: none;
   
  ">
  {% elsif  section.settings.onlyTextlayout_ == 'only-bottom' %}
  style="
  border-top: none;
  border-bottom-style:  solid;
  border-bottom-color:   black;
    
  ">
  
  {% else %}
  
  style="
  border-top: none;
  border-bottom: none;
    
  "> 

  {% endif %}

<div class="cta-text-container- cta-text-{{ section.settings.testgh_ }} container-padding-{{section.id}}"  style="background-color:{{section.settings.bgOnlyTextCTA}};">
    <div class="cta-text-content-">
        {% if section.settings.headingOnlyTextCTA_ != "" %}
        <h2 class="{{ section.settings.headermaxwidth_ }} mxwidth-header-{{section.id}}">{{ section.settings.headingOnlyTextCTA_ }}</h2>
        {% endif %}
        <p class="mxwidth-{{section.id}}">{{ section.settings.bodytextOnlyTextCTA_ }}</p>
        {% if section.settings.showurlOnlyTextCTA_ == true %}
        <a href="{{ section.settings.linkOnlyTextCTA_ }}" class="btn-darrow inside-section-">{{section.settings.linktextOnlyTextCTA_}}</a>
        {% endif %}
    </div>
</div>

</div>
</section>
{% assign desktopheight = section.settings.testgh- %}

<style>
      .sot-alt--{{ section.id }}{
        padding: {{section.settings.padding_sizeup_sot}}px 0px {{section.settings.padding_sizedow_sot}}px 0px;
        border-width:1px;
       }
       .mxwidth-{{section.id}}{
        max-width: {{section.settings.maxwidthoftext_}}px;
       }
       .mxwidth-header-{{section.id}}{
        max-width: {{section.settings.maxwidthoftitle_}}px;   
       }
       .container-padding-{{section.id}}{
         padding:{{section.settings.containertop_}}px 0px {{section.settings.containerbottom_}}px 0px;   
       }
       @media (min-width: 320px) and (max-width: 480px) {
        .sot-alt-{{ section.id }}{
        padding: {{section.settings.padding_sizeup_sotm}}px 0px {{section.settings.padding_sizedow_sotm}}px 0px;
        border-width:0.5px;
       }
       .mxwidth-{{section.id}}{
        max-width: {{section.settings.maxwidthoftextmobile_}}px;
       }
       .mxwidth-header-{{section.id}}{
        max-width: {{section.settings.maxwidthoftitlemobiled_}}px;   
       }
       .container-padding-{{section.id}}{
        padding:{{section.settings.containertopmobile_}}px 0px {{section.settings.containerbottommobile_}}px 0px;     
       }
       }    
  </style>



