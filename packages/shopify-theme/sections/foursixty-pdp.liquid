{% schema %}
  {
    "name": "Foursixty",
    "settings": [
{
          "type": "header",
          "content": "Layout Options"
        },
        {
          "type": "select",
          "id": "onlyTextlayout",
          "label": "Section Border Options",
          "default": "top-bottom",
          "options": [
            {
              "value": "top-bottom",
              "label": "Show Border Top & Bottom"
            },
            {
              "value": "only-top",
              "label": "Show Border Only Top"
            },
            {
                "value": "only-bottom",
                "label": "Show Border Only Bottom"
              },
            {
                "value": "hide-border",
                "label": "Hide Borders"
              }
          ]
        },
      {
            "type": "header",
            "content": "Title"
          },
          {
            "type":"text",
            "id":"pdp_insta_title",
            "label":"Instagram Section Title"
          },
{
            "type": "header",
            "content": "Line Padding Options Desktop"
          },
          {
            "type":"number",
            "id":"padding_sizeup_sot",
            "label":"Top",
            "default":20
          },
          {
            "type":"number",
            "id":"padding_sizedow_sot",
            "label":"Bottom",
            "default":20
          },
          
          {
            "type": "header",
            "content": "Line Padding Options Mobile"
          },
          {
            "type":"number",
            "id":"padding_sizeup_sotm",
            "label":"Top",
            "default":20
          },
          {
            "type":"number",
            "id":"padding_sizedow_sotm",
            "label":"Bottom",
            "default":20
          }
    ],
    "presets": [{
        "name": "Product Page Slider",
        "category": "Foursixty"
    }]
  }
{% endschema %}

