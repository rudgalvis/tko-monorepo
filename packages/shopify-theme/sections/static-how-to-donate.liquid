      {
        "type": "header",
        "content": "Anchor Point Options"
      },
      {
        "id": "sectionID",
        "type": "text",
        "label": "Anchor Point"
      }
     
    ],
    "presets": [
{
"category": "CTA",
"name": "How to donate"
}
]
  }
