{{ 'component-static-how-to-donate.css' | asset_url | stylesheet_tag }}

<section class="kto-main-container" {% if section.settings.sectionID != nil %}id="{{ section.settings.sectionID }}" {% endif %}>
  <div class="tko-lines htd-{{section.id}}"
  {% if section.settings.howonlyTextlayout == 'top-bottom'%}
  style="
      border-top: 1px solid black;
      border-bottom: 1px solid black;
      
  ">
  {% elsif  section.settings.howonlyTextlayout == 'only-top' %}
  style="
      border-top: 1px solid black;
      border-bottom: 0px solid black;
   
  ">
  {% elsif  section.settings.howonlyTextlayout == 'only-bottom' %}
  style="
      border-top: 0px solid black;
      border-bottom: 1px solid black;
    
  ">
  
  {% else %}
  
  style="
      border-top: 0px solid black;
      border-bottom: 0px solid black;
    
  "> 

  {% endif %}

<div class="how-cta-text-container padding-{{section.id}}"   style="background-color:{{section.settings.howbgOnlyTextCTA}};">
    <div class="how-cta-text-content">
        {% if section.settings.howheadingOnlyTextCTA != "" %}
        <h2 class="two-col-h2-{{section.id}}">{{ section.settings.howheadingOnlyTextCTA }}</h2>
        {% endif %}
        <p class="two-col-p-{{section.id}}" style="max-width:{{section.settings.howmaxwidthoftext}}px;">{{ section.settings.howbodytextOnlyTextCTA }}</p>
        {% if section.settings.howshowurlOnlyTextCTA == true %}
        <a href="{{ section.settings.howlinkOnlyTextCTA }}" class="btn-darrow inside-section">{{section.settings.howlinktextOnlyTextCTA}}</a>
        {% endif %}

        {% assign productfordream = section.settings.productdonate %}
        <div class="donate-show-accordion insection">
           
            <div class="show-bottom-accordion">
                <div class="show-selection">
               
                <ul class="found-container-accordion">
                  {% assign foundmanytimes = section.settings.multiplier_fund %}
                  {% for  fundavlue in (1..foundmanytimes) %}
                       <li class="found-meta" data-itemsize="{{forloop.index}}" data-value="{{ productfordream.variants[0].id }}"><span class="money">{{ productfordream.variants[0].price | times: forloop.index  | money_without_trailing_zeros | strip_html }}</span></li> 
                    {% endfor %}   
                  </ul>
                </div>  
                <span  class="currency-holder money">{{productfordream.variants[0].price  | money_without_trailing_zeros | strip_html }} </span>   
                <span class="chavron-price">
                    <img src="https://cdn.shopify.com/s/files/1/0548/6644/4336/files/arrow_for_select.svg?v=1638272830" />

                </span>
                <div data-open-currency="0" class="money-changer"></div>
        
  

    </div>
    <div class="donate-accordion">
    <button style="background-color:black; color:white;" class="donate2" data-quantity="1" data-productID="{{productfordream.variants[0].id}}">DONATE TO THE FUND</button>
    </div>
</div>



    </div>
</div>

</div>
</section>



