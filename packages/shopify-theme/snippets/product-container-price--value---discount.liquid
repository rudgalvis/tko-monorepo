{% comment %}

    {% render 'product-container-price--value---discount', variant: variant %}

    params:
        variant: variant
        hidden: boolean
{% endcomment %}

{% assign discountValue = variant.compare_at_price | minus: variant.price %}

{% if discountValue > 0 %}
    <span data-color="{{ variant.option1 | handleize }}"
          data-varid="{{ variant.id }}"
          {% if hidden %}style="display:none;"{% endif %}
      class="discount-percentage highlight-price"
    >
        -{% render 'discount-percentage',
                    compare_at_price: variant.compare_at_price,
                    price: variant.price
            %}% off
    </span>
{% endif %}

