{% assign imageType = img %}
{% assign imageRatio = size %}
{% assign imageAlt = alt %}
{% assign styleM = maxWidth %}
{% assign cropImage = crop %}

{% assign preSize = 1920 %}

{% if imgType == product %}


 <img loading="lazy"
  src="{{ imageType | img_url: imageRatio }}"

  alt="{{ imageType.alt | escape }}">


{% else %}


{% if styleM == nil %}


<img loading="lazy"
  src="{{ imageType | img_url: imageRatio }}"
  alt="{{ imageType.alt | escape }}">

{% else %}

<img loading="lazy" style="max-width:{{ styleM }}px;" src="{{ imageType | img_url: imageRatio }}" alt="{{ imageAlt }}" srcset="{{ imageType | img_url: '300x' , crop: 'left' }} 300w,
{{ imageType | img_url: '600x' }} 600w,
{{ imageType | img_url: '1386x' }} 900w,
{{ imageType | img_url: '1386x' }} 1440w,
{{ imageType | img_url: '1386x' }} 1920w"/>
{% endif %}
{% endif %}












