---- START Shopify standard product_form ---

<!-- Quantity Selector -->
<input
        type="hidden"
        name="quantity"
        value="1"
        min="1"
        form="{{ product_form_id }}"
>

{% render 'buy-buttons',
        product: product,
        product_form_id: product_form_id,
        section_id: section.id,
        show_pickup_availability: false
%}

<p>installements</p>
{%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}

{% comment %}test{% endcomment %}
{% comment %}{%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}{% endcomment %}
    {% comment %}best{% endcomment %}
    {% comment %}<input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">{% endcomment %}
    {% comment %}{{ form | payment_terms }}{% endcomment %}
{% comment %}{%- endform -%}{% endcomment %}

---- END Shopify standard product_form END ----

<!-- Required Scripts -->
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<style>
    .product-form__buttons button {
        background-color: black;
    }
</style>