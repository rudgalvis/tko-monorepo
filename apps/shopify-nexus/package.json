{
	"name": "shopify-nexus",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "node build/index.js",
		"dev": "concurrently  \"pnpm dev:run\" \"pnpm dev:expose\"",
		"dev:run": "vite dev",
		"dev:expose": "ngrok http --domain=factual-joey-sharp.ngrok-free.app 5173",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.4",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-essentials": "^8.6.0",
		"@storybook/addon-svelte-csf": "^5.0.0-next.23",
		"@storybook/blocks": "^8.6.0",
		"@storybook/experimental-addon-test": "^8.6.0",
		"@storybook/svelte": "^8.6.0",
		"@storybook/sveltekit": "^8.6.0",
		"@storybook/test": "^8.6.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22.13.5",
		"@vitest/browser": "^3.0.7",
		"@vitest/coverage-v8": "^3.0.7",
		"clsx": "^2.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"playwright": "^1.50.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^8.6.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.0.2",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@shopify/shopify-api": "^11.9.0",
		"common-utils": "workspace:*",
		"flat-cache": "^6.1.18",
		"form-data": "^4.0.2",
		"mailgun.js": "^12.0.1",
		"storefront-api": "workspace:*",
		"ui": "workspace:*",
		"winston": "^3.18.3"
	}
}
